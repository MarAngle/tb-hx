.component-product-item{
  margin: 0 auto;
  width: 700rpx;
  background-color: #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 20rpx;
  box-shadow: 0 0 5px #ccc;
}

.component-product-item-icon{
  width: 160rpx;
  height: 160rpx;
  background-color: aqua;
  border-radius: 12rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.component-product-item-icon image{
  width: 100%;
  height: 100%;
}
.component-product-item-content{
  width: 530rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
}

.component-product-item-content-line{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
}
.component-product-item-content-title{
  font-size: 24rpx;
  font-weight: bold;
}
